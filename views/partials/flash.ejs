<% if (success && success.length) { %> 
    <div class="alert alert-success alert-dismissible show" role="alert" style="width: 50%;">
        <%= success %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<% } %>

<% if (error && error.length) { %> 
    <div class="alert alert-danger alert-dismissible show" role="alert" style="width: 50%;">
        <%= error %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<% } %>

